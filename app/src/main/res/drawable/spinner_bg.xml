<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Placeholder item to simulate overlaying right-aligned content -->
    <!-- Note: No marginEnd here. It can only be positioned via the view using this drawable -->
    <item android:gravity="end|center_vertical">
        <shape android:shape="rectangle">
            <size android:width="0dp" android:height="0dp" />
        </shape>
    </item>

</layer-list>
